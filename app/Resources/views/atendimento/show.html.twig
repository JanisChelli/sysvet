{% extends 'base.html.twig' %}

{% block body %}
    <h1>Atendimento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ atendimento.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ atendimento.status }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{% if atendimento.data %}{{ atendimento.data|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>R$ {{ atendimento.valor }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ atendimento.info }}</td>
            </tr>
        </tbody>
    </table>

    
            <a href="{{ path('atendimento_index') }}" class="btn btn-danger">Voltar</a> - 
       
            <a href="{{ path('atendimento_edit', { 'id': atendimento.id }) }}" class="btn btn-secondary">Editar</a>
        
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-primary">
            {{ form_end(delete_form) }}
     
{% endblock %}
